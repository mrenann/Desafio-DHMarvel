<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/vgMainCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/cvImageCardMenu"
        app:cornerRadius="25dp"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/auto_da_compadecida_capa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvNameRecyclerViewMenu"/>

    <TextView
                android:id="@+id/tvNameRecyclerViewMenu"
                style="@style/TextViewFilmsSeriesDefault"
                tools:text="O auto da Compadecida"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:lines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvImageCardMenu"
                app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>